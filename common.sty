\ProvidesPackage{texcommon/common}
% always want to include this to follow ams style \begin{align}, etc
\usepackage{amssymb, amsmath}
% introduces the \includegraphics command, which is needed for inserting figures
\usepackage{graphicx}
% introduces subfig package.  options tells latex to include subfigs
% in lof
\usepackage[lofdepth, lotdepth]{subfig}
% control for captions
\usepackage{caption}
% allows typing utf8 chars directly
\usepackage[utf8]{inputenc}
% T1 font encoding is an 8-bit encoding and uses fonts that have 256
% glyphs, thus we can copy/paste accented words from the pdftex output and
% hyphenate accented words
\usepackage[T1]{fontenc}
% enhancing the appearance and readability of a document while
% exhibiting a minimum degree of visual obtrusion
\usepackage{microtype}
% allows formatting titles in appendices
\usepackage{appendix}
% for pretty and robust units e.g. \SI{50}{\micro\second}
\usepackage{siunitx}
% type greek letters in text mode with \textbeta
\usepackage{textgreek}
% for simplifying typing of physics notations
\usepackage{physics}
% type chemical symbols with \ce{^4_2He}
\usepackage[version=3]{mhchem}
% tools for defining new math accents (e.g. pbar, bbar)
\usepackage{accents}
% package for feynman slash notation
\usepackage{slashed}
% package for drawing feynman diagrams
\usepackage{feynmp-auto}
% defines table rules for professional looking tables
\usepackage{booktabs}
% formatting for dates. Doesn't come installed by default in
% texlive2014. Also, must be sure to install required language modules
% (e.g. "datetime2-english")
\usepackage[useregional]{datetime2}
% A nice solution to label 1st, 2nd, ... is to load the package nth
% with the option super and use the \nth command
\usepackage[super]{nth}
% for sidewaysfigure environment
\usepackage{rotating}
% for centering figures wider than \textwidth
\usepackage[export]{adjustbox}

% setup siunitx formatting options
% see siunitx documentation for list of options
\sisetup{
  alsoload = hep,
  range-units = single,
  range-phrase = --,
  quotient-mode = fraction,
  separate-uncertainty = true
}
% declare new units for siunitx here
\DeclareSIUnit\pe{p.e.}
\DeclareSIUnit\mwe{m.w.e}

