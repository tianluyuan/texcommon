\ProvidesPackage{thesisstyle}
% always want to include this to follow ams style \begin{align}, etc
\usepackage{amssymb, amsmath}
% introduces the \includegraphics command, which is needed for inserting figures
\usepackage{graphicx}
\usepackage[lofdepth, lotdepth]{subfig}
% allows typing utf8 chars directly
\usepackage[utf8]{inputenc}
% T1 font encoding is an 8-bit encoding and % uses fonts that have 256
% glyphs, thus we can copy and paste accented words from % output and
% hyphenate accented words
\usepackage[T1]{fontenc}
% enhancing the appearance and readability of a document while
% exhibiting a minimum degree of visual obtrusion
\usepackage{microtype}
% 'hyperref' breaks when compiled with CU thesis.cls so use 'url' instead
% \usepackage{hyperref}
\usepackage{url}
% allows formatting titles in appendices
\usepackage{appendix}
% automatically include the type of ref (e.g. fig., eq.) with \cref
\usepackage{cleveref}
% for pretty and robust units e.g. \SI{50}{\micro\second}
\usepackage{siunitx}
% type greek letters in text mode with \textbeta
\usepackage{textgreek}
% for simplifying typing of physics notations
\usepackage{physics}
% type chemical symbols with \ce{^4_2He}
\usepackage{mhchem}
% tools for defining new math accents (e.g. pbar, bbar)
\usepackage{accents}
% package for feynman slash notation
\usepackage{slashed}

% setup siunitx formatting options
% see siunitx documentation for list of options
\sisetup{
  alsoload = hep,
  range-units = single,
  range-phrase = --,
  quotient-mode = fraction
}

% useful command macros. spaces typed after declaration of a macro are
% suppressed, use {} to complete the macro and ensure proper behavior
% accents
\newcommand*{\bbar}[1]{\accentset{[-]}{#1}}
\newcommand*{\pbar}[1]{\accentset{(-)}{#1}}
\newcommand*{\conj}[1]{\overline{#1}}

% particles
\newcommand*{\elec}{\ce{e-}}
\newcommand*{\prot}{\ce{p+}}
\newcommand*{\neut}{\ce{n^0}}
\newcommand*{\posi}{\ce{e+}}
\newcommand*{\mup}{\ce{\mu+}}
\newcommand*{\mum}{\ce{\mu-}}
\newcommand*{\nue}{\ce{\nu_e}}
\newcommand*{\numu}{\ce{\nu_{\textmu}}}
\newcommand*{\nutau}{\ce{\nu_{\texttau}}}
\newcommand*{\piz}{\ce{\pi^0}}
\newcommand*{\pip}{\ce{\pi+}}
\newcommand*{\pim}{\ce{\pi-}}
\newcommand*{\kaz}{\ce{K^0}}
\newcommand*{\kap}{\ce{K+}}
\newcommand*{\kam}{\ce{K-}}
\newcommand*{\wplus}{\ce{W+}}
\newcommand*{\wminus}{\ce{W-}}
\newcommand*{\zzero}{\ce{Z^0}}
\newcommand*{\photon}{\ce{\gamma}}

% define common math operators and formulae
\DeclareMathOperator{\lagr}{\mathcal{L}} % curly L
\newcommand*{\group}[2]{\text{#1}\pqty{#2}} % for typing groups like SU(2)
\newcommand*{\diraclagr}[1]{\conj{\Psi}\pqty{i\slashed{#1}-m}\Psi} % for the dirac lagrangian

% miscellaneous 
\newcommand*{\pd}{$\text{P} \varnothing \text{D}$}
